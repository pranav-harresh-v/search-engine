<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>AlgoQuery</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
      body {
        font-family: 'Poppins', sans-serif;
        background: #fff;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .logo {
        font-size: 60px;
        font-weight: 600;
        margin-top: 18vh;
        user-select: none;
      }

      .search-box {
        display: flex;
        width: 90%;
        max-width: 600px;
        margin-top: 30px;
        border: 1px solid #dfe1e5;
        border-radius: 24px;
        padding: 12px 20px;
        box-shadow: 0 1px 6px rgba(32, 33, 36, 0.28);
      }

      .search-box input {
        flex-grow: 1;
        font-size: 16px;
        border: none;
        outline: none;
      }

      .search-box button {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 18px;
      }

      .results {
        width: 90%;
        max-width: 700px;
        margin-top: 40px;
      }

      .result {
        margin-bottom: 30px;
      }

      .result a {
        font-size: 18px;
        color: #1a0dab;
        text-decoration: none;
      }

      .result p {
        color: #4d5156;
        font-size: 14px;
        margin-top: 5px;
      }

      footer {
        margin-top: auto;
        padding: 30px 0;
        font-size: 12px;
        color: #aaa;
      }
    </style>
  </head>
  <body>
    <h1 class="logo">
      <span style="color:#4285F4">A</span>
      <span style="color:#DB4437">l</span>
      <span style="color:#F4B400">g</span>
      <span style="color:#4285F4">o</span>
      <span style="color:#0F9D58">Q</span>
      <span style="color:#DB4437">u</span>
      <span style="color:#F4B400">e</span>
      <span style="color:#4285F4">r</span>
      <span style="color:#0F9D58">y</span>
    </h1>

    <form class="search-box" id="searchForm">
      <input type="text" id="query" name="query" placeholder="Search DSA problems..." autofocus />
      <button type="submit">üîç</button>
    </form>

    <section class="results" id="results"></section>

    <footer>&copy; 2025 AlgoQuery</footer>

    <script>
      const form = document.getElementById("searchForm");
      const queryInput = document.getElementById("query");
      const resultsDiv = document.getElementById("results");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const query = queryInput.value.trim();
        if (!query) return;

        resultsDiv.innerHTML = "Searching...";

        try {
          const res = await fetch(`/search?query=${encodeURIComponent(query)}`);
          const data = await res.json();

          if (data.length === 0) {
            resultsDiv.innerHTML = "<p>No results found.</p>";
          } else {
            resultsDiv.innerHTML = data.map(q => `
              <div class="result">
                <a href="/question/${q.id}" target="_blank">${q.title}</a>
                <p>${q.problem}</p>
              </div>
            `).join("");
          }
        } catch (err) {
          resultsDiv.innerHTML = "<p>Error fetching results.</p>";
        }
      });
    </script>
  </body>
</html>
